@model IEnumerable<MVC_Store.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
}

<h2>Pages</h2>

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

<a>
    @Html.ActionLink("Create New Page", "AddPage", "", new { @class = "btn btn-success" }) <!--3-->
</a>
@*@if (Model.Any())
    {
        <h1 class="text.center">There are no pages</h1>
    }
    else
    {}*@
<!--5-->
<table class="table sorting" id="pages">
    <!--3-->
    <tr>
        <th>
            Title
        </th>
        <th>
            Slug
        </th>
        <th>
            Sidebar
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {<!--5-->
        <tr id="id_@item.Id" class="@item.Slug">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSidebar)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
                <!--if Slug == home no need to show delete buttom-->
                @if (item.Slug != "home")
                {
                    string slash = "| ";
                    @slash;
                    @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete" })
                }


            </td>
        </tr>
    }

</table>


@section Scripts
{
    <script>
        $(function () {
            /*Confirm Page delition*/

            $("a.delete").click(function () {
                if (!confirm("Confirm page deletion")) return false;
            });
            //----------------------------
            // sorting Script

            $("table#pages tbody").sortable(
                {
                    items: "tr:not(.home)",
                    placeholder: "ui-state-highlight",
                    update: function () {
                        var ids = $("table#pages tbody").sortable("serialize");
                        console.log(ids);
                    }

                });
        });
    </script>
}