<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            @Html.ActionLink("Dashbord", "Index", "Dashbord", "", new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Pages", "Index", "Pages", "", new { @class = "nav-link" })<!--6-->
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sidebar", "EditSideBar", "Pages", "", new { @class = "nav-link" })<!--6-->
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">Book date</a>*@
                    </li>
                </ul>
                @*New Right Menu*@
                <ul class="navbar-nav my-2 my-sm-0 ">
                    <!--<ul class="navbar-nav m-lg-auto">-->
                    @*добовляем в правое меню*@
                    <li class="nav-item">
                        <a href="/" class="navbar-brand" target="_blank">Cart</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tattoo Inka Osa</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <!-- Connecting bundle to admin area 5 -->
    @Scripts.Render("~/bundles/jqueryui")

    @Scripts.Render("~/Scripts/bootstrap.js")

    <!--7-->
    @Scripts.Render("~/bundles/ckeditor")

    @RenderSection("scripts", required: false)
</body>
</html>
